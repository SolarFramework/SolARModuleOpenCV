pipeline {
    agent {
        label "jenkins-slave-argo-qmake"
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    parameters {
        booleanParam(name: 'RELEASE',
            defaultValue: false,
            description: 'Create a Release')                
    }
    triggers { pollSCM('*/10 * * * *') } 
    stages {

        stage("Get Binaries") {
            steps {
                script {
                     BRANCH = BRANCH_NAME.replace('/','_')
                }
                withCredentials([usernamePassword(credentialsId: 'bc6e150e-ede8-4e35-8af4-0f037edee8ac', passwordVariable: 'PASSWORD', usernameVariable: 'USERNAME')]) {
                     getBinaries(BRANCH,USERNAME,PASSWORD)
                }
            }
        }

        stage("Get Third Parties") {
            when {
                expression { params.RELEASE == false }
            }                 
            steps {
                installDependency('opencv','3.4.3')
            }
        }        

        stage("Build") {
            steps {
                withEnv(['REMAKEN_RULES_ROOT=/home/jenkins/.remaken/rules/']) {
                    sh "qmake SolARModuleOpenCV.pro"
                    sh "make"
                    sh "make install"
                }
            }
        }

        stage("Run Tests") {
            steps {
                runTests("tests");
            }
        }   

        stage("Build Debug") {
            when {
                expression { params.RELEASE == true }
            }            
             steps {
                 withEnv(['REMAKEN_RULES_ROOT=/home/jenkins/.remaken/rules/']) {
                     sh "qmake SolARModuleOpenCV.pro CONFIG+=debug"
                     sh "make"
                     sh "make install"
                 }
             }
        }  

        stage("Share Binaries") {
            when {
                expression { params.RELEASE == false }
            }                 
            steps {
                script {
                     BRANCH = BRANCH.replace('/','_')
                }
                withCredentials([usernamePassword(credentialsId: 'bc6e150e-ede8-4e35-8af4-0f037edee8ac', passwordVariable: 'PASSWORD', usernameVariable: 'USERNAME')]) {
                     shareBinaries(BRANCH,USERNAME,PASSWORD)
                }
            }
        }       

        stage("Release") {
            when {
                expression { params.RELEASE == true }
            }
            steps {
                script {
                    version = sh (
                        script: "cat *.pro  | grep VERSION | head -1 | cut -d '=' -f 2",
                        returnStdout: true
                    )
                    version = version.replace("\n","")
                }                
                prepareRelease("SolARBuild","linux-gcc","SolARModuleOpenCV")                
                withCredentials([string(credentialsId: 'github-token', variable: 'token')]) {
                    release("SolARModuleOpenCV","${version}","${WORKSPACE}/artifactory/x86_64_shared_release/SolARModuleOpenCV_${version}_x86_64_shared_release.zip ${WORKSPACE}/artifactory/x86_64_shared_debug/SolARModuleOpenCV_${version}_x86_64_shared_debug.zip",token);
                }
            }   
        }

    }

}
